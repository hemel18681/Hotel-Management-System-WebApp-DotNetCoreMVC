

@{
    Layout = "_Layout";
}
@using Microsoft.AspNetCore.Http;
@using Hotel_Management_System.Models;
@model IEnumerable<Hotel_Management_System.Models.NewRoom>
<!DOCTYPE html>

<div class="container">
    @{
        var s = Context.Session.GetInt32("adminId");
        if (s == null)
        {
            @:Please login First
        }
        else
        {
            @:Welcome @Context.Session.GetString("adminUserName")
            @Html.Label("", (string)ViewBag.Message)
            <br />
            <div class="container">
                <div class="row">
                    <a asp-controller="User" asp-action="EditCustomerList">Manage and Add a Customer</a>
                </div>
                <div class="row">
                    <a asp-controller="User" asp-action="AvailableRooms">Available Rooms</a>
                </div>
                <div class="row">
                    <a asp-controller="User" asp-action="CheckIn">Check In A Customer</a>
                </div>
                <div class="row">
                    <a asp-controller="User" asp-action="CreateExpense">Add An Expense</a>
                </div>
                <div class="row">
                    <a asp-controller="User" asp-action="CheckedInShow">Checked In Customers</a>
                </div>
            </div>

            <a asp-controller="Home" asp-action="Logout">Logout</a>

            <br />
            <br />
            <h2>Available Room Numbers</h2>
            <hr />
            <table class="col-md-12">
                <tr>
                    @foreach (var item in Model)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.room_no)
                        </td>
                    }
                </tr>
            </table>
            
        }
    }
</div>